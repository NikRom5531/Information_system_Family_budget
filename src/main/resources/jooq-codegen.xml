<?xml version="1.0" encoding="UTF-8"?>
<configuration xmlns="http://www.jooq.org/xsd/jooq-codegen-3.18.0.xsd">
    <jdbc>
        <!-- Укажите настройки подключения к вашей базе данных -->
        <driver>org.postgresql.Driver</driver>
        <url>jdbc:postgresql://localhost:5432/postgres</url>
        <user>postgres</user>
        <password>root</password>
    </jdbc>
    <generator>
        <database>
            <name>org.jooq.meta.postgres.PostgresDatabase</name>
            <includes>.*</includes>
            <!-- Укажите директивы для генерации классов -->
        </database>
        <target>
            <!-- Укажите путь для сохранения сгенерированных классов -->
            <directory>src/main/java</directory>
            <packageName>genclasses</packageName>
        </target>
    </generator>
</configuration>